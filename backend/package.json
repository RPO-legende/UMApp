{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa:gen": "npm run tsoa:spec && npm run tsoa:routes",
    "dev": "npm run tsoa:gen && ts-node-dev --respawn src/server.ts",
    "start": "node dist/server.js",
    "build": "npm run tsoa:gen && tsc",
    "build-plus-frontend": "tsc && cd ../frontend && npm run build"
  },
  "dependencies": {
    "ejs": "^3.1.9",
    "express": "^4.19.0",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
